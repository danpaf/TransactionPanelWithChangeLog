<body >
<div class="container" style="background: #111A1A" >
    <h1 style="font-family: Arial; text-align: center; color: #a1a1a1; ">Авторизация</h1>
</div>

<button onclick="document.getElementById('id01').style.display='block'" style="width:30%; text-transform: uppercase; justify-content: center; line-height: 3; border-radius: 70px; padding:  20px; margin-top: 50px">Login</button>

<div id="id01" class="modal">
  
    <form class="modal-content animate">
        <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">×</span>
            <img src='https://static.vecteezy.com/system/resources/previews/000/518/208/original/man-working-with-computer-bright-colorful-vector-illustration.jpg' alt="Avatar" class="avatar">
        </div>
      

        <div class="container">
            <label for="username"><b style="color:#57b846">Имя пользователя</b></label>
            <input type="text" placeholder="Введите Имя пользователя" id="username_field" required>
            <label for="password"><b style="color:#57b846">Пароль</b></label>
            <input type="password" placeholder="Введите Пароль" id="password_field" required>
        
            <button onclick="on_auth() ">Войти</button>
            
        </div>

        <div class="container" style="background-color: #f1fefe">
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Отменить</button>
            <span class="psw">Забыли <a href="#">пароль?</a></span>
        </div>
    </form>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>
